{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue", "src/**/*.ts"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "composite": true,
    "target": "ES2021",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  }
}
